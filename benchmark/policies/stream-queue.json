{
    "variables": [
        { "name": "name", "default": "stream-queues" },
        { "name": "pattern", "default": "" },
        { "name": "priority", "default": "0" }
    ],
    "policies": [
        {
            "name": "{{ var.name }}",
            "applyTo": "queues",
            "pattern": "{{ var.pattern }}",
            "priority": "{{ var.priority }}",
            "properties" : [
                { "key": "x-queue-type", "value": "stream", "type": "string" }
            ]
        }
    ]
}