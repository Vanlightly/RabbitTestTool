{
    "topologyName": "TALK_018_OneMirroredQueueRepFactor3",
    "topologyType": "SingleDimension",
    "benchmarkType": "throughput",
    "description": "Mirroed (3x), 16 byte, 1 pub/queue/con, increasing pub rate",
    "vhosts": [
        {
            "name": "benchmark",
            "scale": 1,
            "queueGroups": [
                {
                    "group": "q1",
                    "scale": 1,
                    "properties": [
                        { "key": "ha-mode", "value": "exactly", "type": "string" },
                        { "key": "ha-params", "value": "3", "type": "int" }
                      ]
                }
            ],
            "publisherGroups": [
                {
                    "group": "p1",
                    "scale": 1,
                    "publishMode": {
                        "useConfirms": true,
                        "inFlightLimit": 10000
                    },
                    "sendToQueueGroup": {
                        "queueGroup": "q1",
                        "mode": "Counterpart"
                    },
                    "deliveryMode": "Persistent"
                }
            ],
            "consumerGroups": [
                {
                    "group": "c1",
                    "scale": 1,
                    "queueGroup": "q1",
                    "ackMode": {
                        "manualAcks": true,
                        "consumerPrefetch": 10000,
                        "ackInterval": 1000
                    }
                }
            ]
        }
    ],
    "dimensions" : {
        "singleDimension": {
            "dimension": "messageSize",
            "values": [16, 32, 64, 128, 256, 512, 1024, 2048, 4096, 8192, 16384, 32768, 65536, 131072, 262144, 524288, 1048576],
            "stepDurationSeconds": 30,
            "rampUpSeconds": 5
        }
    }
}