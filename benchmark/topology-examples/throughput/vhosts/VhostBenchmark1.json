{
  "topologyName": "TP_VhostBenchmark1",
  "topologyType": "fixed",
  "benchmarkType": "throughput",
  "description": "10 vhosts, single queue with 1kb persistent messages",
  "topologyGroups": [
    {
      "name": "benchmark",
      "scale": 10,
      "exchanges": [
        {
          "name": "ex1",
          "type": "fanout"
        }
      ],
      "queues": [
        {
          "prefix": "q1",
          "scale": 1,
          "bindings": [
            {
              "from": "ex1"
            }
          ]
        }
      ],
      "publishers": [
        {
          "prefix": "p1",
          "scale": 1,
          "sendToExchange": {
            "exchange": "ex1",
            "routingKeyMode": "none"
          },
          "deliveryMode": "Persistent",
          "messageSize": 1024
        }
      ],
      "consumers": [
        {
          "prefix": "c1",
          "scale": 1,
          "queuePrefix": "q1"
        }
      ]
    }
  ],
  "dimensions" : {
    "fixedDimensions": {
      "durationSeconds": 120,
      "rampUpSeconds": 10
    }
  }
}