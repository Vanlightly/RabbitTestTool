{
    "topologyName": "TP_ClientsBenchmark2",
    "topologyType": "SingleDimension",
    "benchmarkType": "throughput",
    "description": "Increasing publishers to one queue, one consumer",
    "vhosts": [
        {
            "name": "benchmark",
            "scale": 1,
            "exchanges": [
                {
                    "name": "ex1",
                    "type": "fanout"
                }
            ],
            "queueGroups": [
                {
                    "group": "q1",
                    "scale": 1,
                    "bindings": [
                        { "from": "ex1" }
                    ]
                }
            ],
            "publisherGroups": [
                {
                    "group": "p1",
                    "scale": 1,
                    "sendToExchange": {
                        "exchange": "ex1",
                        "routingKeyMode": "none"
                    },
                    "deliveryMode": "Persistent"
                }
            ],
            "consumerGroups": [
                {
                    "group": "c1",
                    "scale": 1,
                    "queueGroup": "q1"
                }
            ]
        }
    ],
    "dimensions" : {
        "singleDimension": {
            "dimension": "Publishers",
            "values": [1, 2, 4, 8, 16, 32],
            "stepDurationSeconds": 60,
            "rampUpSeconds": 10
        }
    }
}